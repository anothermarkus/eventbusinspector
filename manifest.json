{
  "manifest_version": 3,
  "name": "Event Tracker",
  "version": "1.0",
  "description": "Track and visualize event publishers and subscribers.",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/inspector16.png",
      "48": "icons/inspector48.png",
      "128": "icons/inspector128.png"
    }
  },
  "icons": {
    "16": "icons/inspector16.png",
    "48": "icons/inspector48.png",
    "128": "icons/inspector128.png"
  }
}
